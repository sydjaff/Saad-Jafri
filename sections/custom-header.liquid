<nav class="custom-nav">
    <div class="nav-container">
        {% comment %} left item {% endcomment %}
            <div class="nav-item nav-left">
                <a href="/" class="logo logo-text">
                    {{ section.settings.logo_text }}
                </a>
            </div>


        {% comment %} center item {% endcomment %}
            <div class="nav-item nav-center">
                <span class="promo-text">
                    {{ section.settings.promo_text }}
                </span>
            </div> 
         
        {% comment %} right item {% endcomment %}
            <div class="nav-item nav-right">
                <a href="/" class="cta-btn-theme-btn">
                    <span class="cta-btn-text">
                    {{ section.settings.cta_text }}
                    </span>
                    <span class="cta-btn-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="12" viewBox="0 0 26 12" fill="none">
